<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
android:id="@+id/relative1">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edt1"/>


<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="1"
    android:id="@+id/but1"
    android:layout_below="@+id/edt1"
    android:layout_alignParentStart="true" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="2"
    android:id="@+id/but2"
    android:layout_below="@+id/edt1"
    android:layout_toEndOf="@+id/but1" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="3"
    android:id="@+id/but3"
    android:layout_above="@+id/but5"
    android:layout_toEndOf="@+id/but2" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="4"
    android:id="@+id/but4"
    android:layout_below="@+id/but1"
    android:layout_toLeftOf="@+id/but2" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="5"
    android:id="@+id/but5"
    android:layout_alignBottom="@+id/but4"
    android:layout_alignLeft="@+id/but2"
    android:layout_alignStart="@+id/but2" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="6"
    android:id="@+id/but6"
    android:layout_above="@+id/but8"
    android:layout_toEndOf="@+id/but5" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="7"
    android:id="@+id/but7"
    android:layout_below="@+id/but4"
    android:layout_toLeftOf="@+id/but2" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="8"
    android:id="@+id/but8"
    android:layout_below="@+id/but5"
    android:layout_alignLeft="@+id/but5"
    android:layout_alignStart="@+id/but5" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="9"
    android:id="@+id/but9"
    android:layout_below="@+id/but6"
    android:layout_alignLeft="@+id/but6"
    android:layout_alignStart="@+id/but6" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="+"
    android:id="@+id/butadd"
    android:layout_marginLeft="0dp"
    android:layout_above="@+id/but6"
    android:layout_alignStart="@+id/butsub"
    android:layout_alignEnd="@+id/butsub" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="-"
    android:id="@+id/butsub"
    android:layout_alignTop="@+id/but6"
    android:layout_alignParentEnd="true"
    android:layout_alignStart="@+id/butmul" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="*"
    android:id="@+id/butmul"
    android:layout_below="@+id/butsub"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_toEndOf="@+id/but9" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="."
    android:id="@+id/but10"
    android:layout_below="@+id/but7"
    android:layout_toLeftOf="@+id/but2" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="0"
    android:id="@+id/but0"
    android:layout_below="@+id/but8"
    android:layout_alignLeft="@+id/but8"
    android:layout_alignStart="@+id/but8" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="C"
    android:id="@+id/butC"
    android:layout_below="@+id/but9"
    android:layout_alignLeft="@+id/but9"
    android:layout_alignStart="@+id/but9" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:text="/"
    android:id="@+id/butdiv"
    android:layout_below="@+id/but9"
    android:layout_alignEnd="@+id/butmul"
    android:layout_toEndOf="@+id/but9" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="="
    android:id="@+id/buteql"
    android:layout_alignLeft="@+id/but10"
    android:layout_alignStart="@+id/but10"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/but10" />

</RelativeLayout>